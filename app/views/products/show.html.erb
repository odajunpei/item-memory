<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mt-3 pb-3">商品詳細</h2>

      <table class="mt-5 table table-borderless">
        <tbody>
          <tr>
            <th rowspan="6" width="250px" class="align-middle">
              <%= attachment_image_tag @product, :image, size:"200x200", format: 'jpeg', fallback:"no_image.jpg", class: "enn" %>
            </th>
            <th>商品名</th>
            <td><%= @product.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td class= "text-break"><%= @product.introduction %></td>
          </tr>
          <tr>
            <th>税込価格<br>税抜価格</th>
            <td><%= (@product.price*$tax_rate).floor.to_s(:delimited, delimiter: ',') %>円<br><%= @product.price.to_s(:delimited, delimiter: ',') %>円</td>
          </tr>
          <tr>
            <th class="table-mini">販売ステータス</th>
            <td>
              <% if @product.is_active == true %>
                <span class="status-true">販売中</span>
              <% else %>
                <span class="status-false">販売停止中</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-right"><%= link_to "編集する", edit_admin_product_path(@product), class:"btn btn-primary" %></div>
    </div>
  </div>
</div>