<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <div class="d-flex justify-content-between">
        <h2 class="mt-3 pb-4">商品一覧</h2>
        <h4 class="mt-4">
          <%= link_to "新規登録", new_admin_product_path %>
        </h4>
      </div>
      <table class='table table-hover table-inverse'>
        <thead class="table-skyblue">
          <tr>
            <th class="table-mini"><%= sort_orderp "created_at", "商品ID" %></th>
            <th width="50%"><%= sort_orderp "name" ,"商品名" %></th>
            <th><%= sort_orderp "price","税抜き価格" %></th>
            <th><%= sort_orderp "genre_id","ジャンル" %></th>
            <th class="table-mini"><%= sort_orderp "is_active","ステータス" %></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td>
                <%= product.id %>
              </td>
              <td>
                <%= link_to admin_product_path(product) do %>
                <%= product.name %>
                <% end %>
              </td>
              <td>
                  ￥<%= product.price.to_s(:delimited, delimiter: ',') %>
              </td>
              <td>
                  <%= product.genre.name %>
              </td>
              <td align="center">
                  <% if product.is_active == true %>
                  <span class="status-true">販売中</span>
                  <% else %>
                  <span class="status-false">販売停止中</span>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
   </div>
  </div>
</div>