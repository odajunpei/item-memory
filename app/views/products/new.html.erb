<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mt-3 pb-3">新商品登録</h2>
      <%= form_with model: @product,url:new_product_path, local:true do |f| %>
      <table class="table table-borderless mt-5 ">
        <tbody>
          <tr>
            <td><%= f.label :商品画像 %></td>
            <td><%= f.attachment_field :image, size:"200x200" %></td>
          </tr>
          <tr>
            <td><%= f.label :商品名 %></td>
            <td><%= f.text_field :name, size:"50", required: true %></td>
          </tr>
          <tr>
            <td><%= f.label :商品説明 %></td>
            <td><%= f.text_area :introduction, size:"53", required: true %></td>
          </tr>
          <tr>
            <td><%= f.label :税抜価格 %></td>
            <td><%= f.number_field :price, required: true %></td>
          </tr>
          <tr>
            <td><%= f.label :販売ステータス %></td>
            <td>
              <div class="sale_status_form">
                <%= f.radio_button :is_active, true %>
                <%= f.label :done, '販売中', value: true %>
                <%= f.radio_button :is_active, false, class:"ml-3" %>
                <%= f.label :done, '販売停止中', value: false %>
              </div>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "商品の登録", class: "btn btn-primary"  %></td>
          </tr>
      </tbody>
    </table>
    <% end %>
    </div>
  </div>
</div>